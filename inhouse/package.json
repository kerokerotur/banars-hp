{
  "name": "inhouse",
  "private": true,
  "type": "module",
  "scripts": {
    "build:dev": "env-cmd -f .env react-router build",
    "build:prod": "env-cmd -f .env.prod react-router build",
    "dev": "react-router dev",
    "start": "serve ./build/client",
    "typecheck": "react-router typegen && tsc",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint app --fix --ext .ts,.tsx,.js,.jsx",
    "lint:check": "eslint app --ext .ts,.tsx,.js,.jsx",
    "clean": "rm -rf build .react-router node_modules/.cache",
    "dev:frontend": "node ../scripts/wait-for-server.js && react-router dev"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-router/node": "^7.5.3",
    "@react-router/serve": "^7.5.3",
    "clsx": "^2.1.1",
    "env-cmd": "^10.1.0",
    "isbot": "^5.1.27",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet": "^6.1.0",
    "react-router": "^7.5.3",
    "tailwind-merge": "^3.3.0",
    "@project/common": "workspace:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/vite": "^4.1.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-helmet": "^6.1.11",
    "eslint-config-next": "15.2.4",
    "serve": "^14.2.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
