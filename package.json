{
  "name": "homepage",
  "version": "1.0.0",
  "description": "バナーズ野球クラブ公式ホームページ",
  "main": "index.js",
  "scripts": {
    "build": "turbo build",
    "build:dev": "turbo build:dev",
    "build:prod": "turbo build:prod",
    "dev": "turbo dev:frontend --filter=client --filter=inhouse",
    "dev:all": "turbo dev",
    "dev:server": "turbo dev:server --filter=server",
    "dev:frontend": "turbo dev:server --filter=server & turbo dev:frontend --filter=client --filter=inhouse",
    "dev:client": "turbo dev:server --filter=server & turbo dev:frontend --filter=client",
    "dev:inhouse": "turbo dev:server --filter=server & turbo dev:frontend --filter=inhouse",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "lint:check": "turbo lint:check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "test": "turbo test",
    "clean": "turbo clean",
    "server-deploy": "turbo server-deploy --filter=\"server\""
  },
  "keywords": [
    "baseball",
    "homepage",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "turbo": "^2.5.4"
  }
}
